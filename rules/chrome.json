{
  "patterns": [
    "\\bchrome\\b",
    "\\bchromium\\b"
  ],
  "dependencies": [
    {
      "pre_install": [],
      "packages": ["chromium-browser"],
      "post_install": [],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu",
          "versions": ["20.04", "22.04"]
        }
      ]
    },
    {
      "pre_install": [
        {
          "command": "dnf install -y epel-release"
        }
      ],
      "packages": ["chromium"],
      "post_install": [],
      "constraints": [
        {
          "os": "linux",
          "distribution": "rockylinux"
        },
        {
          "os": "linux",
          "distribution": "redhat",
          "version": ["8", "9"]
        }
      ]
    },
    {
      "pre_install": [],
      "packages": ["chromium"],
      "post_install": [],
      "constraints": [
        {
          "os": "linux",
          "distribution": "debian"
        },
        {
          "os": "linux",
          "distribution": "fedora"
        },
        {
          "os": "linux",
            "distribution": "alpine"
        }
      ]
    },
    {
      "pre_install": [
        { "command": "yum install -y which" },
        { "command": "[ $(which google-chrome) ] || curl -fsSL -o /tmp/google-chrome.rpm https://dl.google.com/linux/chrome/rpm/stable/x86_64/google-chrome-stable-125.0.6422.141-1.x86_64.rpm" },
        { "command": "[ $(which google-chrome) ] || yum install -y /tmp/google-chrome.rpm" }
      ],
      "packages": [],
      "post_install": [
        { "command": "rm -f /tmp/google-chrome.rpm" }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos",
          "versions": ["7", "8"]
        }
      ]
    }
  ]
}
